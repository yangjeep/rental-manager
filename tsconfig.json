{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["@types/node", "./types/cloudflare"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "functions/**/*.ts",
    "lib/**/*.ts",
    "workers/**/*.ts",
    "types/**/*.d.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
